<section class="mx-auto max-w-4xl px-6 py-16">
  <div class="rounded-3xl border border-slate-800/60 bg-slate-900/70 p-8">
    <h1 class="font-display text-3xl font-semibold text-white">Share an Opportunity</h1>
    <p class="mt-2 text-sm text-slate-300">Submit details about your role, collaboration, or request. Once reviewed by the XField team, it will appear on the Opportunities board.</p>
    <% if @opportunity.errors.any? %>
      <div class="mt-6 rounded-2xl border border-rose-500/30 bg-rose-500/10 p-4 text-sm text-rose-200">
        <p class="font-semibold">We couldn't save your submission:</p>
        <ul class="mt-2 list-inside list-disc space-y-1">
          <% @opportunity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @opportunity, url: opportunities_path, class: "mt-8 space-y-6" do |f| %>
      <div class="grid gap-6 md:grid-cols-2">
        <div>
          <%= f.label :opportunity_type, "Type", class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
          <%= f.select :opportunity_type, Opportunity.opportunity_types.keys.map { |k| [k.humanize, k] }, { prompt: "Select type" }, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
        </div>
        <div>
          <%= f.label :title, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
          <%= f.text_field :title, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
        </div>
      </div>
      <div class="grid gap-6 md:grid-cols-2">
        <div>
          <%= f.label :full_name, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
          <%= f.text_field :full_name, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
        </div>
        <div>
          <%= f.label :organization, "Organization", class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
          <%= f.text_field :organization, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
        </div>
      </div>
      <div>
        <%= f.label :description, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
        <%= f.text_area :description, rows: 6, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
      </div>
      <div>
        <%= f.label :link, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
        <%= f.url_field :link, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
      </div>
      <div class="flex justify-end gap-3">
        <%= link_to "Cancel", opportunities_path, class: "inline-flex items-center rounded-full border border-slate-700 px-5 py-3 text-sm font-semibold text-slate-300 transition hover:border-slate-500 hover:text-white" %>
        <%= f.submit "Submit for Review", class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
      </div>
    <% end %>
  </div>
</section>
