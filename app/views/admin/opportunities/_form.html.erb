<%= form_with model: [:admin, @opportunity], class: "space-y-6" do |f| %>
  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <%= f.label :opportunity_type, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.select :opportunity_type, Opportunity.opportunity_types.keys.map { |k| [k.humanize, k] }, {}, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
    <div>
      <%= f.label :title, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.text_field :title, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
  </div>
  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <%= f.label :full_name, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.text_field :full_name, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
    <div>
      <%= f.label :organization, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.text_field :organization, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
  </div>
  <div>
    <%= f.label :description, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :description, rows: 6, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :link, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.url_field :link, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :approved, class: "inline-flex items-center gap-3 text-sm text-slate-200" do %>
      <%= f.check_box :approved, class: "h-4 w-4 rounded border border-slate-600 bg-slate-900 text-primary-600" %>
      Approve for publishing
    <% end %>
  </div>
  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", admin_opportunities_path, class: "inline-flex items-center rounded-full border border-slate-700 px-5 py-3 text-sm font-semibold text-slate-300 transition hover:border-slate-500 hover:text-white" %>
    <%= f.submit class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
  </div>
<% end %>
