<section class="mx-auto max-w-6xl px-6 py-16">
  <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Newsroom</p>
      <h1 class="mt-2 font-display text-4xl font-semibold text-white">Latest from the XField team</h1>
      <p class="mt-4 max-w-2xl text-slate-300">Deep dives, founder stories, and analysis on the frontier tech landscape.</p>
    </div>
  </div>
  <div class="mt-10 grid gap-6 md:grid-cols-2">
    <% @articles.each do |article| %>
      <article class="flex h-full flex-col overflow-hidden rounded-3xl border border-slate-800/60 bg-slate-900/70">
        <% if article.hero_image_url.present? %>
          <div class="relative h-52 w-full overflow-hidden">
            <img src="<%= article.hero_image_url %>" alt="<%= article.title %>" class="h-full w-full object-cover">
          </div>
        <% end %>
        <div class="flex flex-1 flex-col p-6">
          <p class="text-xs uppercase tracking-[0.3em] text-slate-500"><%= article.published_on.strftime("%b %d, %Y") %></p>
          <h2 class="mt-3 text-xl font-semibold text-white"><%= article.title %></h2>
          <p class="mt-3 text-sm text-slate-300"><%= article.summary %></p>
          <%= link_to "Read article", article_path(article), class: "mt-6 inline-flex items-center gap-2 text-sm font-semibold text-primary-200 transition hover:text-primary-100" %>
        </div>
      </article>
    <% end %>
  </div>
</section>
