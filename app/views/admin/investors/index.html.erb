<section>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="font-display text-3xl font-semibold text-white">Investors</h1>
      <p class="mt-2 text-sm text-slate-400">Review and approve venture partner profiles.</p>
    </div>
    <%= link_to "New investor", new_admin_investor_path, class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
  </div>
  <div class="mt-8 overflow-hidden rounded-2xl border border-slate-800 bg-slate-900/80">
    <table class="min-w-full divide-y divide-slate-800">
      <thead class="bg-slate-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Firm</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Contact</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Status</th>
          <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-800">
        <% @investors.each do |investor| %>
          <tr>
            <td class="px-6 py-4 text-sm text-slate-200"><%= investor.firm_name %></td>
            <td class="px-6 py-4 text-sm text-slate-400"><%= investor.contact_name.presence || '—' %></td>
            <td class="px-6 py-4 text-sm">
              <% if investor.approved? %>
                <span class="rounded-full bg-emerald-500/10 px-3 py-1 text-xs font-semibold text-emerald-300">Approved</span>
              <% else %>
                <span class="rounded-full bg-amber-500/10 px-3 py-1 text-xs font-semibold text-amber-300">Pending</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right text-sm">
              <%= link_to "View", admin_investor_path(investor), class: "text-primary-200 hover:text-primary-100" %>
              <span class="mx-2 text-slate-700">•</span>
              <%= link_to "Edit", edit_admin_investor_path(investor), class: "text-primary-200 hover:text-primary-100" %>
              <span class="mx-2 text-slate-700">•</span>
              <%= link_to "Delete", admin_investor_path(investor), method: :delete, data: { confirm: "Delete this investor?" }, class: "text-rose-300 hover:text-rose-200" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
