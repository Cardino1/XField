<section class="mx-auto max-w-6xl px-6 py-16">
  <div class="flex flex-col gap-8 md:flex-row md:items-start md:justify-between">
    <div class="max-w-2xl">
      <div class="inline-flex items-center gap-2 rounded-full border border-slate-800/70 bg-slate-900/70 px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] text-slate-300">
        Explore
        <span class="inline-flex items-center gap-1 rounded-full bg-primary-600/20 px-2 py-0.5 text-[10px] font-bold text-primary-100">Latest</span>
      </div>
      <h1 class="mt-6 font-display text-4xl font-semibold leading-tight text-white md:text-6xl">
        Discover today's top breakthroughs in tech and venture.
      </h1>
      <p class="mt-6 max-w-xl text-lg text-slate-300">
        XField curates founders, research labs, and investors that are reshaping tomorrow. Dive into vetted opportunities, meet aligned partners, and stay ahead of the signal.
      </p>
      <div class="mt-10 flex flex-wrap items-center gap-4">
        <%= link_to "Browse Opportunities", opportunities_path, class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
        <%= link_to "Investor Partners", investors_path, class: "inline-flex items-center gap-2 rounded-full border border-slate-700 px-5 py-3 text-sm font-semibold text-slate-200 transition hover:border-primary-500/60 hover:text-white" %>
      </div>
    </div>
    <div class="w-full max-w-md space-y-4 rounded-3xl border border-slate-800/60 bg-slate-900/60 p-6 backdrop-blur">
      <h2 class="text-sm font-semibold uppercase tracking-[0.3em] text-slate-400">Signal Board</h2>
      <% Opportunity.opportunity_types.keys.each do |type| %>
        <div class="flex items-start justify-between rounded-2xl border border-slate-800/60 bg-slate-950/80 px-4 py-4">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500"><%= type.humanize %></p>
            <p class="mt-2 text-sm text-slate-300">
              <%= Opportunity.approved.where(opportunity_type: type).count %> live
            </p>
          </div>
          <%= link_to "View", opportunities_path(anchor: type), class: "inline-flex items-center rounded-full bg-slate-800 px-3 py-1 text-xs font-semibold text-slate-200 transition hover:bg-primary-600 hover:text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="mx-auto max-w-6xl px-6">
  <div class="flex items-center justify-between">
    <h2 class="font-display text-2xl font-semibold text-white">Latest Opportunities</h2>
    <%= link_to "See all", opportunities_path, class: "text-sm text-primary-200 transition hover:text-primary-100" %>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @featured_opportunities.each do |opportunity| %>
      <article class="group relative overflow-hidden rounded-3xl border border-slate-800/60 bg-slate-900/60 p-6 shadow-lg shadow-black/20 backdrop-blur transition hover:-translate-y-1 hover:border-primary-500/50">
        <div class="flex items-center justify-between">
          <span class="<%= opportunity_badge(opportunity.opportunity_type) %>"><%= opportunity.opportunity_type.humanize %></span>
          <span class="text-xs text-slate-500"><%= opportunity.created_at.strftime("%b %d") %></span>
        </div>
        <h3 class="mt-5 text-lg font-semibold text-white"><%= opportunity.title %></h3>
        <p class="mt-2 text-sm text-slate-400">
          <%= opportunity.organization %> • <%= opportunity.full_name %>
        </p>
        <p class="mt-4 line-clamp-3 text-sm text-slate-300"><%= opportunity.description %></p>
        <%= link_to "Details", opportunity.link, class: "mt-6 inline-flex items-center gap-2 text-sm font-semibold text-primary-200 transition hover:text-primary-100", target: "_blank", rel: "noopener" %>
      </article>
    <% end %>
  </div>
</section>

<section class="mx-auto mt-16 max-w-6xl px-6">
  <div class="flex flex-col gap-6 rounded-3xl border border-slate-800/70 bg-gradient-to-br from-slate-900 via-slate-900 to-slate-950 px-8 py-10 md:flex-row md:items-center md:justify-between">
    <div class="max-w-xl">
      <h2 class="font-display text-3xl font-semibold text-white">Investor Partners</h2>
      <p class="mt-3 text-slate-300">Showcase your thesis, portfolio, and founder requests with a tailored page on XField.</p>
    </div>
    <%= link_to "Create Your VC Page", new_investor_path, class: "inline-flex items-center gap-2 rounded-full bg-white px-6 py-3 text-sm font-semibold text-slate-900 shadow-lg shadow-white/20 transition hover:bg-slate-100" %>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-2">
    <% @investors.each do |investor| %>
      <div class="rounded-3xl border border-slate-800/60 bg-slate-900/70 p-6">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-white"><%= investor.firm_name %></h3>
          <span class="text-xs text-slate-500">Partner</span>
        </div>
        <p class="mt-3 text-sm text-slate-300"><%= investor.values %></p>
        <p class="mt-4 text-xs uppercase tracking-[0.3em] text-slate-500">Looking for</p>
        <p class="mt-1 text-sm text-slate-200"><%= investor.looking_for %></p>
        <% if investor.portfolio_highlights.present? %>
          <p class="mt-4 text-xs uppercase tracking-[0.3em] text-slate-500">Portfolio</p>
          <p class="mt-1 text-sm text-slate-300"><%= investor.portfolio_highlights %></p>
        <% end %>
        <%= link_to "Request for startups", investors_path(anchor: "requests"), class: "mt-5 inline-flex items-center gap-2 text-sm font-semibold text-primary-200 transition hover:text-primary-100" %>
      </div>
    <% end %>
  </div>
</section>

<section class="mx-auto mt-16 max-w-6xl px-6" id="news">
  <div class="flex items-center justify-between">
    <h2 class="font-display text-2xl font-semibold text-white">Latest News</h2>
    <%= link_to "View all", articles_path, class: "text-sm text-primary-200 transition hover:text-primary-100" %>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-3">
    <% @latest_articles.each do |article| %>
      <article class="group flex h-full flex-col overflow-hidden rounded-3xl border border-slate-800/60 bg-slate-900/60">
        <% if article.hero_image_url.present? %>
          <div class="relative h-44 w-full overflow-hidden">
            <img src="<%= article.hero_image_url %>" alt="<%= article.title %>" class="h-full w-full object-cover transition duration-500 group-hover:scale-105">
          </div>
        <% end %>
        <div class="flex flex-1 flex-col p-6">
          <p class="text-xs uppercase tracking-[0.3em] text-slate-500"><%= article.published_on.strftime("%b %d, %Y") %></p>
          <h3 class="mt-3 text-lg font-semibold text-white"><%= article.title %></h3>
          <p class="mt-3 line-clamp-3 text-sm text-slate-300"><%= article.summary %></p>
          <%= link_to "Read story", article_path(article), class: "mt-6 inline-flex items-center gap-2 text-sm font-semibold text-primary-200 transition hover:text-primary-100" %>
        </div>
      </article>
    <% end %>
  </div>
</section>

<section class="mx-auto mt-16 max-w-6xl px-6" id="get-updates">
  <div class="rounded-3xl border border-slate-800/60 bg-slate-900/70 p-8">
    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <div>
        <h2 class="font-display text-2xl font-semibold text-white">Get weekly frontier updates</h2>
        <p class="mt-2 text-sm text-slate-300">No noise—just distilled intelligence on tech breakthroughs and opportunities.</p>
      </div>
      <div class="w-full max-w-md" id="updates_form">
        <%= render "shared/update_form", user: @updates_user %>
      </div>
    </div>
  </div>
</section>
