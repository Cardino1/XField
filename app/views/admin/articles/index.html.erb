<section>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="font-display text-3xl font-semibold text-white">Articles</h1>
      <p class="mt-2 text-sm text-slate-400">Manage published stories.</p>
    </div>
    <%= link_to "New article", new_admin_article_path, class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
  </div>
  <div class="mt-8 overflow-hidden rounded-2xl border border-slate-800 bg-slate-900/80">
    <table class="min-w-full divide-y divide-slate-800">
      <thead class="bg-slate-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Title</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Published</th>
          <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-800">
        <% @articles.each do |article| %>
          <tr>
            <td class="px-6 py-4 text-sm text-slate-200"><%= article.title %></td>
            <td class="px-6 py-4 text-sm text-slate-400"><%= article.published_on.strftime("%b %d, %Y") %></td>
            <td class="px-6 py-4 text-right text-sm">
              <%= link_to "View", admin_article_path(article), class: "text-primary-200 hover:text-primary-100" %>
              <span class="mx-2 text-slate-700">•</span>
              <%= link_to "Edit", edit_admin_article_path(article), class: "text-primary-200 hover:text-primary-100" %>
              <span class="mx-2 text-slate-700">•</span>
              <%= link_to "Delete", admin_article_path(article), method: :delete, data: { confirm: "Delete this article?" }, class: "text-rose-300 hover:text-rose-200" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
