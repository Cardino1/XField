<%= form_with model: [:admin, @article], class: "space-y-6" do |f| %>
  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <%= f.label :title, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.text_field :title, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
    <div>
      <%= f.label :published_on, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.date_field :published_on, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
  </div>
  <div>
    <%= f.label :hero_image_url, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.url_field :hero_image_url, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :summary, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :summary, rows: 3, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :content, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :content, rows: 10, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", admin_articles_path, class: "inline-flex items-center rounded-full border border-slate-700 px-5 py-3 text-sm font-semibold text-slate-300 transition hover:border-slate-500 hover:text-white" %>
    <%= f.submit class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
  </div>
<% end %>
