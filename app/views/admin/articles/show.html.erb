<section class="max-w-3xl">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="font-display text-3xl font-semibold text-white"><%= @article.title %></h1>
      <p class="mt-2 text-sm text-slate-400">Published <%= @article.published_on.strftime("%B %d, %Y") %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_article_path(@article), class: "rounded-full bg-primary-600 px-4 py-2 text-sm font-semibold text-white" %>
      <%= link_to "Delete", admin_article_path(@article), method: :delete, data: { confirm: "Delete this article?" }, class: "rounded-full border border-rose-400 px-4 py-2 text-sm font-semibold text-rose-200" %>
    </div>
  </div>
  <div class="mt-8 space-y-6 text-sm text-slate-200">
    <p class="text-base text-slate-300"><%= @article.summary %></p>
    <% if @article.hero_image_url.present? %>
      <div class="overflow-hidden rounded-2xl">
        <img src="<%= @article.hero_image_url %>" alt="<%= @article.title %>" class="w-full">
      </div>
    <% end %>
    <div class="prose prose-invert max-w-none">
      <%= simple_format(@article.content) %>
    </div>
  </div>
</section>
