<section>
  <h1 class="font-display text-3xl font-semibold text-white">Subscribers</h1>
  <p class="mt-2 text-sm text-slate-400">Manage newsletter subscribers.</p>
  <div class="mt-8 overflow-hidden rounded-2xl border border-slate-800 bg-slate-900/80">
    <table class="min-w-full divide-y divide-slate-800">
      <thead class="bg-slate-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Email</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Joined</th>
          <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-800">
        <% @users.each do |user| %>
          <tr>
            <td class="px-6 py-4 text-sm text-slate-200"><%= user.email %></td>
            <td class="px-6 py-4 text-sm text-slate-400"><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-6 py-4 text-right text-sm">
              <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Remove this subscriber?" }, class: "text-rose-300 hover:text-rose-200" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
