<%= form_with model: [:admin, @investor], class: "space-y-6" do |f| %>
  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <%= f.label :firm_name, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.text_field :firm_name, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
    <div>
      <%= f.label :contact_name, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.text_field :contact_name, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
  </div>
  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <%= f.label :email, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.email_field :email, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
    <div>
      <%= f.label :website, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
      <%= f.url_field :website, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
    </div>
  </div>
  <div>
    <%= f.label :values, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :values, rows: 4, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :looking_for, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :looking_for, rows: 4, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :portfolio_highlights, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :portfolio_highlights, rows: 3, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :request_for_startups, class: "block text-xs uppercase tracking-[0.3em] text-slate-400" %>
    <%= f.text_area :request_for_startups, rows: 4, class: "mt-2 w-full rounded-xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white focus:border-primary-500 focus:outline-none" %>
  </div>
  <div>
    <%= f.label :approved, class: "inline-flex items-center gap-3 text-sm text-slate-200" do %>
      <%= f.check_box :approved, class: "h-4 w-4 rounded border border-slate-600 bg-slate-900 text-primary-600" %>
      Approve profile
    <% end %>
  </div>
  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", admin_investors_path, class: "inline-flex items-center rounded-full border border-slate-700 px-5 py-3 text-sm font-semibold text-slate-300 transition hover:border-slate-500 hover:text-white" %>
    <%= f.submit class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary-600/30 transition hover:bg-primary-500" %>
  </div>
<% end %>
